{% extends 'base2.html.twig' %}

{% block content %}
    <br>
    <br>
    <h1>Assossiations listes</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Tel</th>
                <th>Email</th>
                <th class="column1">Adresse  </th>
                <th class="column2"> Description </th>
                <th>Nom du president </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for assossiation in assossiations %}
            <tr>
                <td><a href="{{ path('assossiation_show', { 'id': assossiation.id }) }}">{{ assossiation.id }}</a></td>
                <td>{{ assossiation.nomAssossiation }}</td>
                <td>{{ assossiation.telAssossiation }}</td>
                <td>{{ assossiation.emailAssossiation }}</td>
                <td>{{ assossiation.adresseAssossiation }}</td>
                <td>{{ assossiation.descriptionAssossiation }}</td>
                <td>{{ assossiation.nomDuPresident }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('assossiation_show', { 'id': assossiation.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('assossiation_edit', { 'id': assossiation.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('assossiation_new') }}">Create a new assossiation</a>
        </li>
    </ul>
{% endblock %}
